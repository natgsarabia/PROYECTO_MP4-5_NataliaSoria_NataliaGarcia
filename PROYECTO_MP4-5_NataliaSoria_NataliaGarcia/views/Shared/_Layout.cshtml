<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROYECTO_LENGUAJE_MARCAS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROYECTO_LENGUAJE_MARCAS.styles.css" asp-append-version="true" />

    <style>
        .navbar{
            margin-bottom: 0;
            background:rgba(14, 66, 106);
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;    
        }
        .carousel{
            margin-top: -2%;
            z-index:1000;
            background: linear-gradient(to bottom, rgba(14, 66, 106, 1), rgba(0, 0, 255, 0));
            margin: 0;
            backdrop-filter: blur(3px);
            text-align: center;
            align-items: center;    
            z-index:1000;
            height: fit-content;

        }
        .footer {
            position: relative bottom;
            bottom: 0;
            width: 100%;
            height: 20px; 
            background-color: #033256;
            color:rgb(189, 210, 213);
            text-align: center;     
            z-index:1000;
            height: fit-content;
        }
    </style>

</head>

<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"> 
                    <p style="font-size:40px; font-weight:bolder;-webkit-text-stroke-width: 1px; color:rgb(157, 216, 233);">
                        <img src="@Url.Content("~/Content/Images/logo.png")" height="70px" width="70px" alt="First slide" style="margin-bottom:4px;">
                    Clouds over Europe
                    </p>
                </a>
            </div>
        </nav>
        <div  class="carousel slide" data-ride="carousel" >
            <p ><img src="@Url.Content("~/Content/Images/mundo.gif")" height="150px" width="200px" alt="First slide" style="margin-top: 3%;"></p>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" >
        
        &copy; <a style="color:rgb(189, 210, 213); font-weight:bolder;">2024 - NAT'S PROYECT -</a> <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:rgb(189, 210, 213);">Privacy</a>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
